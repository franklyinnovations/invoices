input, textarea
  background: transparent
  border: 1px solid #7c8f9e
  color: #7c8f9e
  display: block
  margin-bottom: 10px
  max-width: 100%
  padding: 0.8em 0.5em
  transition: background 0.2s, border-color 0.2s, box-shadow 0.2s, color 0.2s
  width: 100%

input:focus, textarea:focus {
  border-color: white
  box-shadow: 0 0 10px 1px rgba(255,255,255,0.3)
  color: white
  outline: none
}

button
  background #7c8f9e
  border 0
  color: white
  display: block
  margin-bottom: 10px
  padding: 0.8em 0.5em
  transition: all 0.2s
  width: 100%

button:hover, button:focus
  background: white
  color: #7c8f9e
  outline: none

.print
  background-color: pink
  border: 0
  color: white
  margin-bottom: 0
  width: 100%

.print:hover, .print:focus
  background-color: dark-pink
  color: white